{
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": "https://github.com/mrcaidev/thermoflash/blob/master/config/schema.json",
  "title": "Thermoflash config",
  "description": "Configuration file in Thermoflash project.",
  "type": "object",
  "properties": {
    "headers": {
      "type": "object",
      "description": "Common headers to issue request towards sites of your school."
    },
    "sites": {
      "type": "object",
      "description": "Sites related to temperature reporting.",
      "items": {
        "type": "object",
        "description": "Basic info about this site.",
        "properties": {
          "url": {
            "type": "string",
            "description": "URL of this site."
          },
          "method": {
            "type": "string",
            "description": "Request method towards this site.",
            "enum": [
              "get",
              "post",
              "put"
            ]
          },
          "data": {
            "type": "object",
            "description": "Data to be posted to this site."
          }
        },
        "required": [
          "url",
          "method"
        ]
      }
    }
  },
  "required": [
    "headers",
    "sites"
  ]
}